/* changes/additions by peter keane for daseproject.org */

/* force scroll bar */
html {height:100%; margin-bottom: 1px;}
h1,h2 {margin:0 0 1em 0;}
h3,h4 {margin:0 0 .8em 0;}
h5,h6 {margin:0 0 .6em 0;}
h1,h2,h3,h4,h5,h6,strong{color: #223;}
th,td{border:1px solid #999;padding:.5em;}
a:link,a:visited { color:#444; text-decoration:none; }
a:hover,a:active { color:#000; text-decoration:none; }
ul a, dl a { font-weight: bold; line-height: 1.4em; }
dd { color: #333; line-height: 1.4em; }

